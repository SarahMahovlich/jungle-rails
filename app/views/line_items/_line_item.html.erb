<tr>
  <td>
    <%= image_tag line_item.product.image.tiny %>
  </td>
  <td>
    <strong><%= line_item.product.name %></strong>
    <%= line_item.product.description %>
  </td>
  <td>
    <%= humanized_money_with_symbol (line_item.product.price_cents / 100) %>
  </td>
  <td>
    <%= line_item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol (line_item.product.price * line_item.quantity)%>
  </td>
</tr>


